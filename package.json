{
  "name": "share-qr",
  "version": "4.0.0",
  "description": "Share selected text or page URL as QR code",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "scripts": {
    "release": "rimraf dist/* && npm run prettier && npm run lint && npm run build",
    "build": "webpack",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{html,tsx,ts,scss,css}'",
    "commit": "git-cz"
  },
  "dependencies": {
    "qrcode": "^1.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-qr-hooks": "^1.0.7"
  },
  "devDependencies": {
    "@types/qrcode": "^1.3.4",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/parser": "^3.1.0",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "^3.5.3",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "extensionizer": "^1.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
